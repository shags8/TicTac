<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#307785"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#193948"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#193948"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/button13"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:backgroundTint="#193948"
        android:onClick="restart"
        android:text="REMATCH"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/home"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#193948"
        android:text="HOME"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/rectangle_5__2_" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="#62BCE7"
                android:onClick="game"
                android:tag="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button2"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#62BCE7"
                android:onClick="game"
                android:tag="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button3"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="#62BCE7"
                android:onClick="game"
                android:tag="2"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                tools:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#62BCE7"
                android:onClick="game"
                android:tag="3"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button5"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#62BCE7"
                android:onClick="game"
                android:tag="4"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button6"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#62BCE7"
                android:onClick="game"
                android:tag="5"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#62BCE7"
                android:onClick="game"
                android:tag="6"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button8"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#62BCE7"
                android:onClick="game"
                android:tag="7"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button9"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#62BCE7"
                android:onClick="game"
                android:tag="8"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gamer01" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gamer02" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/anton"
        android:text="PLAYER-1 TURN"
        android:textColor="#193948"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>